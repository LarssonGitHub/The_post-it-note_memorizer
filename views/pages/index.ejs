  </style>
</head>

<body class="ml-6 mr-6">

  <header class="container-fluid mt-4 mb-5" id="eventDeligationHeader">
    <div class="row align-items-start">
      <div id="headerMessage" class="p-4 col-12 col-lg-6 text-left">
        <h1> <%= headerMessage %> <span class="text-muted h4"><%= user %></span></h1>
        <a id="logoutBtn" class="btn btn-primary" href="/user/logout">Logout</a>
      </div>

      <div id="nukeDatabaseContainer" class="col-6 col-lg-3 text-center">
        <img id="nukeDatabase" src="/assets/SVG/nukeBtn.svg" alt="nuleBtn" width="70">
      </div>


      <div id="headerAddNote" class="col-6 col-lg-3 text-right">
        <div id="headerAddNoteChild">
          <img id="postItStack" src="/assets/SVG/backgroundStack.svg" alt="PostItStack" width="300">
          <img id="postItStackEvent" src="/assets/SVG/foregroundStack.svg" alt="PostItStack" width="150">
        </div>
      </div>
    </div>

    <div id="postFormContainer">

      <div id="postFormContainerChild">
        <div id="closePostFormContainer">
          <div id="closePostForm"></div>
        </div>
        <form id="postForm">
          <div class="form-group">
            <input type="text" class="form-control" name="headlineValue" placeholder="What's up?" required>
          </div>
          <div class="form-group">
            <textarea name="bodyTextValue" class="form-control"
              placeholder="Write something! I promise to not share it with anyone else."></textarea>
          </div>
          <div class="form-group">
            <select id="colorSelect" class="form-control" name="colorSelectValue">
              <option value="Green">Green</option>
              <option value="Blue">Blue</option>
              <option value="Red">Red</option>
              <option value="Yellow">Yellow</option>
              <option value="Orange">Orange</option>
              <option value="Purple">Purple</option>
            </select>
          </div>
          <input type="hidden" id="userIDValue" name="userIDValue" value="">
          <button class="btn btn-primary" id="postBtn" type="submit">Add Post-it</button>
        </form>
      </div>
    </div>
  </header>



  <div id='notificationContainer'>
    <div id="closeNotificationContainer">
      <div id="closeNotification"></div>
    </div>
    <p id='notificationPara'>Some text in the Modal..</p>
  </div>





  <!-- TODO, bootstrap hates spacing -->
  <main id="eventDeligationContainerMain" class="container-fluid main-container">
    <div id="postItNoteContainer" class="row">

      <% results.forEach(function(object) { %>
      <div
        class="postItColor<%= object.colorSelect %> containerChild postIt p-5 col-12 col-md-6 col-lg-4 col-xl-2 col-xxl-2 align-self-start"
        id="<%= object.id %>">
        <button class="btn btn-primary btnVisiblity displayHide displayShow editBtn">Edit note</button>
        <h2 class="headline" contenteditable="false"><%= object.headline %> </h2>
        <p class="bodyText" contenteditable="false"><%= object.bodyText %></p>
        <select class="colorSelect btnVisiblity displayHide" id="colorSelect" name="colorSelect">
          <option value="Green">Green</option>
          <option value="Blue">Blue</option>
          <option value="Red">Red</option>
          <option value="Yellow">Yellow</option>
          <option value="Orange">Orange</option>
          <option value="Purple">Purple</option>
        </select>
        <p class="userID" hidden><%=object.userID%></p>
        <button class="btn btn-primary btnVisiblity displayHide displayShow deleteBtn"></button>
      </div>
      <% }); %>

    </div>
  </main>

  <script src="/javascript/javascript.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
